<?xml version="1.0" encoding="UTF-8"?>
<portlet-app
	xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

	<portlet>
		<portlet-name>TurbolinksIntegrationApplication</portlet-name>
		<display-name xml:lang="EN">TurbolinksIntegrationApplication
		</display-name>
		<display-name xml:lang="IT">TurbolinksIntegrationApplication
		</display-name>
		<portlet-class>
			org.exoplatform.addons.turbolinks.portlet.TurbolinksIntegrationPortlet
		</portlet-class>
		<init-param>
			<name>juzu.run_mode</name>
			<value>prod</value>
		</init-param>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<supported-locale>en</supported-locale>
		<supported-locale>it</supported-locale>
		<resource-bundle>locale.turbolinksintegration.TurbolinksIntegration</resource-bundle>
		<portlet-info>
			<title>TurbolinksIntegrationApplication</title>
			<keywords>turbolinks</keywords>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>view</name>
				<value>normal</value>
				<read-only>false</read-only>
			</preference>
			<preference>
				<name>fullscreen</name>
				<value>false</value>
				<read-only>false</read-only>
			</preference>
		</portlet-preferences>
	</portlet>

</portlet-app>